<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.TextFieldTableCell?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="474.0" prefWidth="807.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TransactionController">
	<children>
		<AnchorPane layoutX="7.0" minHeight="0.0" minWidth="0.0" prefHeight="460.0" prefWidth="800.0">
			<children>

				<TableView fx:id="tableTransaction" editable="true" layoutX="15.0" layoutY="88.0" prefHeight="314.0" prefWidth="765.0" AnchorPane.bottomAnchor="48.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="88.0">
					<columns>
						<TableColumn fx:id="descriptionCol" editable="true" prefWidth="144.0" text="Description">
							<cellValueFactory>
								<PropertyValueFactory property="Description" />
							</cellValueFactory>
							<cellFactory>
								<TextFieldTableCell fx:factory="forTableColumn" />
							</cellFactory>
						</TableColumn>
						<TableColumn fx:id="typeCol" editable="true" prefWidth="128.0" text="Type">
							<cellValueFactory>
								<PropertyValueFactory property="TransactionType" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="dateCol" editable="true" prefWidth="114.0" text="Date">
							<cellValueFactory>
								<PropertyValueFactory property="Date" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="valueCol" editable="true" prefWidth="87.0" text="Value">
							<cellValueFactory>
								<PropertyValueFactory property="Value" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="periodicCol" editable="true" prefWidth="108.0" text="Periodic">
							<cellValueFactory>
								<PropertyValueFactory property="TextPeriodicTransaction" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="targetCol" editable="true" minWidth="0.0" prefWidth="97.0" text="Target">
							<cellValueFactory>
								<PropertyValueFactory property="TargetTransaction" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn fx:id="categoryCol" editable="true" prefWidth="86.0" text="Category">
							<cellValueFactory>
								<PropertyValueFactory property="Category" />
							</cellValueFactory>
						</TableColumn>
					</columns>
				</TableView>
				<ComboBox fx:id="accountCombo" layoutX="205.0" layoutY="37.0" onAction="#accountCombo" prefHeight="25.0" prefWidth="157.0" promptText="Choose your account" AnchorPane.topAnchor="37.0" />
				<ComboBox fx:id="bankCombo" layoutX="16.0" layoutY="37.0" prefHeight="25.0" prefWidth="157.0" promptText="Choose your bank" AnchorPane.leftAnchor="16.0" />
				<ScrollBar layoutX="780.0" layoutY="88.0" orientation="VERTICAL" prefHeight="333.0" prefWidth="14.0" />
				<Button fx:id="addTransaction" disable="true" layoutX="670.0" layoutY="37.0" mnemonicParsing="false" onAction="#handleAddTransaction" text="Add a transaction" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="37.0" />
				<Button fx:id="removeTransaction" disable="true" layoutX="16.0" layoutY="424.0" mnemonicParsing="false" onAction="#removeTransaction" text="Remove transaction" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="15.0" />
				<Button fx:id="editTransaction" disable="true" layoutX="679.0" layoutY="421.0" mnemonicParsing="false" onAction="#editTransaction" text="Edit transaction" AnchorPane.bottomAnchor="-2.0" AnchorPane.rightAnchor="32.0" />
            <Label fx:id="balanceLabel" layoutX="323.0" layoutY="419.0" text="Balance: ">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="balanceNumberLabel" layoutX="407.0" layoutY="419.0" text="0.00">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
			</children>
		</AnchorPane>
      <Label fx:id="alertLabel" alignment="CENTER" layoutX="260.0" layoutY="445.0" text="The balance is below the threshold !" textAlignment="CENTER" textFill="RED">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
	</children>
</Pane>
